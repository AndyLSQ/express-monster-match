
<%- include('header.ejs') %>

<section>
	<inner-column>

		<module-name>
			<h1>Monsters Page</h1>

			<%
				data.forEach(function(monster) { %>
				<li class = "<%= monster.adopted ? 'adopted' : 'available' %>">
					<h2><%=monster.name%></h2>
					<picture class = "<%= monster.adopted ? 'adopted' : 'available' %>">
						<img src="<%=monster.image%>" alt="monster headshot">
					</picture>
					<% if (monster.adopted) { %>
						<p>THIS MONSTER HAS BEEN ADOPTED</p>
						<%}%>
					<p>Age: <%=monster.age%></p>
					<p>Gender: <%=monster.gender%></p>
					<p> Characteristics: <%=monster.characteristics.join(', ')%>
						
					</p>
					<a href="/detail/<%=monster.id%>">More info</a>
				</li>
				<% }) %>

		</module-name>

	</inner-column>
</section>

<%- include('footer.ejs') %>

